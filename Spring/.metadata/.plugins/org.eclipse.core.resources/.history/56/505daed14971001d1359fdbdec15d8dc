 	function doDelete(){
		//문제 사원번호가 9999 넘으면 '잘못된 사원번호 입니다.' 라는 alert창 보여주기
		//제이쿼리 : $("#d_empno").val();
   		//바닐라스크립트 : document.getElemenById("d_empno").value;
		var deptno = $("#d_deptno").val(); //input 데이터 가져오기
		if(deptno == ''){
			alert("부서번호를 입력해주세요.");
			$("#d_deptno").focus();
			return false;
		}
		if(deptno > 9999){
			alert("잘못된 부서번호 입니다.부서번호를 9999이하로 작성해주세요.");
			$("#d_deptno").focus();
			$("#d_deptno").val('');
			return false;
		}
		
		//사원삭제 아작스 연결하기
		$.ajax({
			url: '/api/v1/dept/'+deptno,
           	type: "DELETE",
           	dataType: 'json',
           	success: function (response){
           		console.log(response);
           		alert('부서 삭제 완료!');
           		location.reload(); //새로고침
           	}
		});
	}



     </script>

