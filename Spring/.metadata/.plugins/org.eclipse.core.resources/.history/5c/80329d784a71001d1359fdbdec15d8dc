 	function doDelete(){
		//ë¬¸ì œ ì‚¬ì›ë²ˆí˜¸ê°€ 9999 ë„˜ìœ¼ë©´ 'ì˜ëª»ëœ ì‚¬ì›ë²ˆí˜¸ ì…ë‹ˆë‹¤.' ë¼ëŠ” alertì°½ ë³´ì—¬ì£¼ê¸°
		//ì œì´ì¿¼ë¦¬ : $("#d_empno").val();
   		//ë°”ë‹ë¼ìŠ¤í¬ë¦½íŠ¸ : document.getElemenById("d_empno").value;
		var empno = $("#d_empno").val(); //input ë°ì´í„° ê°€ì ¸ì˜¤ê¸°
		if(empno == ''){
			alert("ì‚¬ì›ë²ˆí˜¸ë¥¼ ì…ë ¥í•´ì£¼ì„¸ìš”.");
			$("#d_empno").focus();
			return false;
		}
		if(empno > 9999){
			alert("ì˜ëª»ëœ ì‚¬ì›ë²ˆí˜¸ ì…ë‹ˆë‹¤.ì‚¬ì›ë²ˆí˜¸ë¥¼ 9999ì´í•˜ë¡œ ì‘ì„±í•´ì£¼ì„¸ìš”.");
			$("#d_empno").focus();
			$("#d_empno").val('');
			return false;
		}
		
		//ì‚¬ì›ì‚­ì œ ì•„ì‘ìŠ¤ ì—°ê²°í•˜ê¸°
		$.ajax({
			url: '/api/v1/emp/'+empno,
           	type: "DELETE",
           	dataType: 'json',
           	success: function (response){
           		console.log(response);
           		alert('ì‚¬ì› ì‚­ì œ ì™„ë£Œ!');
           		location.reload(); //ìƒˆë¡œê³ ì¹¨
           	}
		});
	}
