<script type="text/javascript">


	function join(){
		var empno = $('#empno').val();
		var ename = $('#ename').val();
		var job = $('#job').val();
		var sal = $('#sal').val();
		
		var jsonData = {
				"empno" : empno,
				"ename" : ename,
				"job" : job,
				"sal" : sal
		};
		
        //AJAX í˜¸ì¶œ!
        $.ajax({
        	url: '/api/v1/emp/join',
           	type: "POST",
           	contentType: 'application/json', // ì„œë²„ì— json íƒ€ì…ìœ¼ë¡œ ë³´ë‚¼ ì˜ˆì •(ìš”ì²­)
           	data: JSON.stringify(jsonData),
           	dataType: 'json',
           	success: function (response){
           		console.log(response);
           		alert('ì‚¬ì› ì¶”ê°€ ì™„ë£Œ!');
           		location.reload(); //ìƒˆë¡œê³ ì¹¨
           	}
		});
	}

     function callMyAPI(){
        //ajax : ë°±ì—”ë“œì™€ í”„ë¡ íŠ¸ê°€ í†µì‹ í•˜ëŠ” ê¸°ëŠ¥!
        //type : GET == Controllerì— GetMapping
        $.ajax({
           url:'/api/v1/emp',
           type:'GET',
           dataType : 'json',
           success : function (data){
              if(data.length>0)
              	for(var i in data){
              		tr = $('<tr></tr>');
              		 
              		empno = $('<td>'+data[i].empno+'</td>');
              		ename = $('<td>'+data[i].ename+'</td>');
              		job = $('<td>'+data[i].job+'</td>');
              		sal = $('<td>'+data[i].sal+'</td>');
              		hiredate = $('<td>'+data[i].hiredate+'</td>');
              		
              		tr.append(empno);
              		tr.append(ename);
              		tr.append(job);
              		tr.append(sal);
              		tr.append(hiredate);
              		
              		$("#emp").append(tr);
              }
           }
        });   
     }
     callMyAPI();// í•¨ìˆ˜í˜¸ì¶œ
     
