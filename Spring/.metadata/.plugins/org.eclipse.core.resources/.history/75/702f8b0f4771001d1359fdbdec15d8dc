	function join(){
		var deptno = $('#deptno').val();
		var dname = $('#dname').val();
		var loc =$('#loc').val();
		
		var jsonData = {
				"deptno" : deptno,
				"dname" : dname,
				"loc" : loc
		};
        //AJAX í˜¸ì¶œ!
        $.ajax({
        	url: '/api/v1/dept/join',
           	type: "POST",
           	contentType: 'application/json', // ì„œë²„ì— json íƒ€ì…ìœ¼ë¡œ ë³´ë‚¼ ì˜ˆì •(ìš”ì²­)
           	data: JSON.stringify(jsonData),
